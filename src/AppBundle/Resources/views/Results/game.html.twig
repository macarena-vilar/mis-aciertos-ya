<div class="col-sm-4 {{ offset }}">
	<div class="well">
		<div class="panel-thumbnail" style="padding-top: 5px">
			<img src="{{ game.gameLogo }}" class="img-responsive gameImg"
				height="{{ game.logoH }}" width="{{ game.logoW }}" />
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="text-center">
					<h4>
						<strong>Mis n&uacute;meros</strong>
					</h4>
				</div>
			</div>
            <div class="row" id="{{ game.gameName }}-nrList" >
                <div class="center-block" style="max-width:{{ game.gameNrWidth }}px;background-color:#ccc;">
{% for i in 0..game.gameNumbers-1 %}
					<input type="text" 
					       class="entryNumber {{ game.nrFormats[i] }}"  
					       maxlength="2" id="nr[]"
					       data-game="{{ game.gameId }}" 
					       size="2"/>
{% endfor %}					
                  </div>
            </div>
			<div class="row">
				<div class="text-center">
					<h4>
						<strong>Fecha del sorteo</strong>
					</h4>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-offset-1">
					<div class="input-group date">
						<input type="text" class="form-control" id="{{ game.gameId }}-date"> 
							<span class="input-group-addon"> 
								<i class="glyphicon glyphicon-th"> </i>
							</span> 
						</input>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-6">
					<button type="button" 
					        class="btn btn-raised btn-primary btn-lg"
						    id="{{ game.gameName }}-submit" 
						    data-gameId="{{ game.gameId }}"
						    onClick="prizeClick('{{ game.gameId }}')">
						Ver premio
					</button>
				</div>
			</div>
		</div>
	</div>
</div>
